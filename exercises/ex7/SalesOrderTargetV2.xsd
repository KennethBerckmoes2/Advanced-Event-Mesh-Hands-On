<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="orderHeader">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="orderId" type="xs:string"/>
        <xs:element name="creator" type="xs:string"/>
        <xs:element name="orderDate" type="xs:date"/>
        <xs:element name="salesType" type="xs:string"/>
        <xs:element name="ordertype" type="xs:string"/>
        <xs:element name="salesOrg" type="xs:string"/>
        <xs:element name="distributionChannel" type="xs:string"/>
        <xs:element name="region" type="xs:string"/>
        <xs:element name="netvalue" type="xs:decimal"/>
        <xs:element name="currency" type="xs:string"/>

        <xs:element name="buyer">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="buyerId" type="xs:string"/>
              <xs:element name="buyerName" type="xs:string"/>
              <xs:element name="address" type="xs:string"/>
              <xs:element name="telephone" type="xs:string"/>
              <xs:element name="emailAddress">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="email" type="xs:string"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="orderItem">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="item" type="xs:string"/>
              <xs:element name="material" type="xs:string"/>
              <xs:element name="materialType" type="xs:string"/>
              <xs:element name="itemType" type="xs:string"/>
              <xs:element name="itemDescription" type="xs:string"/>
              <xs:element name="orderSchedule" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="scheduleNumber" type="xs:string"/>
                    <xs:element name="units" type="xs:decimal"/>
                    <xs:element name="uom" type="xs:string"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
